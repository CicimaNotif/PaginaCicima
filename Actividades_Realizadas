        Ajusta el n√∫mero de elementos visibles a 2 por fila
    */
    @media (max-width: 992px) {
        .activity-item {
            flex: 0 0 calc(50% - 20px); /* Ancho para 2 elementos por vista (50% - margen) */
        }
    }

    /* 
        MEDIA QUERY PARA M√ìVILES (768px o menos)
        Ajustes espec√≠ficos para pantallas peque√±as
    */
    @media (max-width: 768px) {
        /* Reduce el padding en m√≥viles */
        .activities-carousel-container {
            padding: 20px;
        }
        
        /* Un elemento por vista en m√≥viles */
        .activity-item {
            flex: 0 0 calc(100% - 20px); /* Ancho completo (100% - margen) */
        }
        
        /* Elimina la altura m√≠nima del t√≠tulo en m√≥viles */
        .activity-title {
            min-height: auto;
        }
        
        /* Cambia a disposici√≥n vertical en controles */
        .carousel-bottom-controls {
            flex-direction: column; /* Elementos en columna */
            gap: 15px; /* Espacio reducido entre elementos */
        }
    }
</style>

<!-- 
    ============================================================
    JAVASCRIPT PARA LA FUNCIONALIDAD DEL CARRUSEL
    ============================================================
    Controla la navegaci√≥n y comportamiento del carrusel
-->
<script>
    // Espera a que el DOM est√© completamente cargado antes de ejecutar el c√≥digo
    document.addEventListener('DOMContentLoaded', function() {
        // Obtiene referencias a los elementos principales del carrusel
        const carousel = document.querySelector('.activities-carousel');
        const prevButton = document.querySelector('.activity-prev');
        const nextButton = document.querySelector('.activity-next');
        const items = document.querySelectorAll('.activity-item');
        
        // Variables de estado del carrusel
        let currentIndex = 0; // √çndice actual del carrusel
        const itemsPerView = 3; // N√∫mero de elementos visibles por defecto (para desktop)
        
        /**
         * FUNCI√ìN: ACTUALIZAR POSICI√ìN DEL CARRUSEL
         * Calcula y aplica el desplazamiento horizontal del carrusel
         * bas√°ndose en el √≠ndice actual y el n√∫mero de elementos por vista
         */
        function updateCarousel() {
            // Verifica que existan elementos en el carrusel
            if (items.length === 0) return;
            
            // Calcula el ancho de un elemento (incluyendo m√°rgenes)
            const itemWidth = items[0].offsetWidth + 20; // offsetWidth + margen (10px + 10px)
            
            // Desplaza el carrusel a la posici√≥n calculada
            carousel.scrollTo({
                left: currentIndex * itemWidth * itemsPerView, // Posici√≥n horizontal
                behavior: 'smooth' // Transici√≥n suave
            });
        }
        
        /**
         * EVENT LISTENER: BOT√ìN ANTERIOR
         * Navega al grupo anterior de elementos cuando se hace click
         */
        prevButton.addEventListener('click', function() {
            // Verifica que no estemos en el primer grupo
            if (currentIndex > 0) {
                currentIndex--; // Decrementa el √≠ndice
                updateCarousel(); // Actualiza la posici√≥n
            }
        });
        
        /**
         * EVENT LISTENER: BOT√ìN SIGUIENTE
         * Navega al siguiente grupo de elementos cuando se hace click
         */
        nextButton.addEventListener('click', function() {
            // Calcula el n√∫mero m√°ximo de grupos posibles
            const maxIndex = Math.ceil(items.length / itemsPerView) - 1;
            
            // Verifica que no estemos en el √∫ltimo grupo
            if (currentIndex < maxIndex) {
                currentIndex++; // Incrementa el √≠ndice
                updateCarousel(); // Actualiza la posici√≥n
            }
        });
        
        /**
         * EVENT LISTENER: REDIMENSIONAMIENTO DE VENTANA
         * Recalcula la posici√≥n del carrusel cuando cambia el tama√±o de la ventana
         */
        window.addEventListener('resize', function() {
            updateCarousel(); // Vuelve a calcular y aplicar la posici√≥n
        });
        
        // Inicializa el carrusel en la posici√≥n correcta
        updateCarousel();
    });
</script>
